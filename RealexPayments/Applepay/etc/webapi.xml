<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="POST" url="/V1/applepay/validateMerchant">
        <service class="RealexPayments\Applepay\Api\ValidateMerchantInterface" method="validateMerchant"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/applepay/processPaymentToken">
        <service class="RealexPayments\Applepay\Api\ProcessPaymentTokenInterface" method="processPaymentToken"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>